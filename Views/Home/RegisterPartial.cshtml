@using weddingPlanner.Models
@model User

<body>
<div class="col">
    <h4>Register</h4>
    <form action="submit" method="post">
        <div class="form-group">
            <span class="color: red" asp-validation-for="FirstName"></span>
            <label asp-for="FirstName">First Name:</label>
            <input asp-for="FirstName" class="form-control" value=@TempData["First Name"]>
        </div>
        <div class="form-group">
            <span class="red" asp-validation-for="LastName"></span>
            <label asp-for="LastName">Last Name:</label>
            <input asp-for="LastName" class="form-control" value=@TempData["Last Name"]>
        </div>
        <div class="form-group">
            <span class="red" asp-validation-for="Email"></span>
            <label asp-for="Email">Email:</label>
            <input asp-for="Email" class="form-control" value=@TempData["Email"]>
        </div>
        <div class="form-group">
            <span class="red" asp-validation-for="DOB"></span>
            <label asp-for="DOB">Date of Birth:</label>
            <input type="date" asp-for="DOB" class="form-control" value=@TempData["Email"]>
        </div>
        <div class="form-group">
            <span class="red" asp-validation-for="Password"></span>
            <label asp-for="Password">Password:</label>
            <input asp-for="Password" class="form-control">
        </div>
        <div class="form-group">
            <span class="red" asp-validation-for="ConfirmPassword"></span>
            <label asp-for="ConfirmPassword">Confirm Password:</label>
            <input asp-for="ConfirmPassword" class="form-control">
        </div>
        <button type="submit" class="btn btn-primary">Register</button>
    </form>
</div>
</body>